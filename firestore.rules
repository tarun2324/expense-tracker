rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Global override for superuser
    allow read, write: if request.auth != null && request.auth.uid == "nX8uOqEmQ8TXGqco0yqW1MEemRB2";

    // Groups collection
    match /artifacts/{appId}/groups/{groupId} {
      allow read: if request.auth != null && (request.auth.uid in resource.data.users);
      allow update: if request.auth != null && (request.auth.uid in resource.data.admins);
      allow create: if request.auth != null && (request.auth.uid in request.resource.data.admins);
      // Only admins can add users to the group
      allow write: if request.auth != null && (request.auth.uid in resource.data.admins);
    }

    // Expenses collection under a group
    match /artifacts/{appId}/groups/{groupId}/expenses/{expenseId} {
      allow read: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/groups/$(groupId)).data.users);
      allow create: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/groups/$(groupId)).data.users);
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId);
    }

    // Incomes collection under a group
    match /artifacts/{appId}/groups/{groupId}/incomes/{incomeId} {
      allow read: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/groups/$(groupId)).data.users);
      allow create: if request.auth != null && (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/groups/$(groupId)).data.users);
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId);
    }

    // Users collection under artifacts
    match /artifacts/{appId}/users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /artifacts/{appId}/users {
      allow update, create, delete: false;
      allow read: if request.auth != null;
    }
  }
}